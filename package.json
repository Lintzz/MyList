{
  "name": "MyList",
  "version": "1.1.7",
  "description": "Um aplicativo para organizar e acompanhar suas m√≠dias favoritas.",
  "main": "main.js",
  "author": "Lintz",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "build": "npm run clean && electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "firebase": "^12.1.0",
    "html2canvas": "^1.4.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.seu-nome.minhalista",
    "productName": "MyList",
    "artifactName": "MyList-setup-${version}.${ext}",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Lintzz",
      "repo": "MyList"
    }
  }
}
